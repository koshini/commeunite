.gallery {
  display: grid;
  grid-gap: 20px;
  grid-template-columns: 100px 200px 100px;
   grid-template-rows: [row] auto [row] auto [row] ;
  
}

.image {
  background-color: #444;
  color: #fff;
}

.image_1{
  background-color: #666;
  grid-column: 1/3;
  grid-row:1;
}
.image_2{
 grid-column: 3;
 grid-row:1/3;
}

